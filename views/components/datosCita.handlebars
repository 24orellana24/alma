<form method="post" action="/dashboard-asesor/cerrar-cita" enctype="multipart/form-data">
  <div class="form-group row w-80 m-auto">
    <div class="form-group col-12 col-sm-3 mb-3">
      <label>Id</label>
      <input id="idCita" name="idCita" class="form-control m-auto text-center" value="{{cita.idcita}}" readonly/>
    </div>
    <div class="form-group col-12 col-sm-3 mb-3">
      <label>Fecha</label>
      <input id="fecha" name="fecha" type="date" class="form-control m-auto text-center" value="{{cita.fecha}}" readonly/>
    </div>
    <div class="form-group col-12 col-sm-3 mb-3">
      <label>Hora</label>
      <input id="hora" name="hora" class="form-control m-auto text-center" value="{{cita.hora}}" readonly/>
    </div>
    <div class="form-group col-12 col-sm-3 mb-3">
      <label>Estado</label>
      {{#unless cita.estado}}
        <input id="estado" name="estado" class="form-control m-auto text-center text-danger" value="Pendiente" readonly/>
      {{/unless}}
    </div>
    <div class="form-group col-12 col-sm-12 mb-3">
      <label>Comentario Cliente</label>
      <input id="comentario" name="comentario" class="form-control m-auto text-center" value="{{cita.comentario}}" readonly/>
    </div>
    <div class="form-group col-12 col-sm-12 mb-3">
      <label>Comentario Asesor</label>
      <input id="comentarioAsesor" name="comentarioAsesor" class="form-control m-auto text-center border-primary border-3" required/>
    </div>
  </div>
  <button class="btn btn-success bi bi-arrow-up-circle-fill">...guardar y cerrar</button>
  <a href="/dashboard-asesor" class="btn btn-danger bi bi-skip-backward-fill">...volver</a>
</form>