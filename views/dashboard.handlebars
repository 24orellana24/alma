<!DOCTYPE html>

<html lang="es">

<head>
{{> cabecera}}
</head>
  
<body class="mx-3 bg-light text-center">

  {{> menu }}

  {{> bienvenida}}

  <div class="row mb-5">
    <div class="col-sm-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">Mis Datos Personales</h5>        
            <form>
              <div class="form-group row w-80 m-auto">
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Rut</label>
                  <input id="rut" name="rut" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Email</label>
                  <input id="email" name="email" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Apellido Paterno</label>
                  <input id="apellido_paterno" name="apellido_paterno" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Apellido Materno</label>
                  <input id="apellido_materno" name="apellido_materno" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Nombres</label>
                  <input id="nombre" name="nombre" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Fecha Nacimiento</label>
                  <input id="fecha_nacimiento" name="fecha_nacimiento" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Número de Celular</label>
                  <input id="celular" name="celular" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Comuna de Residencia</label>
                  <input id="comuna" name="comuna" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Password</label>
                  <input id="password" name="password" type="password" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Repita la Password</label>
                  <input id="rep_password" name="rep_password" type="password" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-12 mb-3">
                  <label>Cambiar Foto... </label>
                  <input id="foto" type="file" name="foto"/>
                </div>
              </div>
            </form>
          <a href="#" class="btn btn-primary">...actualizar...</a>
        </div>
      </div>
    </div>
    <div class="col-sm-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">Mis Datos Financieros</h5>
            <form>
              <div class="form-group row w-80 m-auto">
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Ingresos</label>
                  <input id="ingreso" name="ingreso" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Cuotas</label>
                  <input id="cuota" name="cuota" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Deudas</label>
                  <input id="deuda" name="deuda" class="form-control m-auto" />
                </div>
                <div class="form-group col-12 col-sm-6 mb-3">
                  <label>Activos</label>
                  <input id="activo" name="activo" class="form-control m-auto" />
                </div>
              </div>
            </form>
            <a href="#" class="btn btn-primary">...calcular...</a>
        </div>
      </div>
    </div>
    <div class="col-sm-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-3">Semáforo</h5>
          <form>
            <div class="form-group row w-80 m-auto">
              <div class="form-group col-12 col-sm-6 mb-3">
                <label>Carga Financiera</label>
                <input id="carga" name="carga" class="form-control m-auto" />
              </div>
              <div class="form-group col-12 col-sm-6 mb-3">
                <label>Leverage</label>
                <input id="leverage" name="leverage" class="form-control m-auto" />
              </div>
              <div class="form-group col-12 col-sm-6 mb-3">
                <label>Patrimonio</label>
                <input id="patrimonio" name="patrimonio" class="form-control m-auto" />
              </div>
              <div class="form-group col-12 col-sm-6 mb-3">
                <label>Fecha y Hora</label>
                <input id="fecha_hora" name="fecha_hora" class="form-control m-auto" />
              </div>
            </div>
          </form>
          <a href="#" class="btn btn-primary">...guardar...</a>
        </div>
      </div>
    </div>
  </div>

  {{> pie }}

</body>

</html>