<body class="mx-3 bg-light text-center">

  {{> menu }}

  {{> bienvenida}}

  <div>
    <h4 class="my-3">Indícanos el día y la hora que te gustaría ser contactado</h4>
    <form>
      <div class="form-group row w-50 m-auto">
        <div class="form-group col-6 col-sm-6 mb-3">
          <label>Fecha</label>
          <input id="fecha" name="fecha" type="date" class="form-control m-auto text-center" />
        </div>
        <div class="form-group col-6 col-sm-6 mb-3">
          <label>Hora</label>
          <input id="hora" name="hora" type="time" class="form-control m-auto text-center" />
        </div>
        <div class="form-group col-12 col-sm-12 mb-3">
          <label>Comentario</label>
          <textarea id="comentario" name="comentario" class="form-control m-auto" rows="5"></textarea>
        </div>
      </div>
        <button formmethod="POST" formenctype="multipart/form-data" class="btn btn-primary mb-3">...agendar...</button>
        <a href="/dashboard" class="btn btn-primary mb-3">...volver...</a>
    </form>
  </div>


  {{> pie }}

